<resources>
    <!-- Base application theme. -->
    <style name="Theme.UberApp_Tim9" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="Theme.UberApp_Tim9.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UberApp_Tim9.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.UberApp_Tim9.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.AppCompat.navTheme">

        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/teal</item>

    </style>

    <style name="Theme.UberApp_Tim9.Basic">
        <item name="android:textColor">@color/black</item>
        <item name="android:colorControlNormal">@color/dark_grey</item>
        <item name="android:textColorSecondary">@color/cardview_dark_background</item>
    </style>
</resources>