<resources>
    <!-- Base application theme. -->
    <style name="Theme.UberApp_Tim9" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="colorPrimary">@color/sky_blue</item>

    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorOutline">@color/sky_blue</item>
    </style>


    <style name="CursorColorTextInput" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/sky_blue</item>
        <item name="colorControlActivated">@color/sky_blue</item>
    </style>


    <style name="Theme.UberApp_Tim9.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Button">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>


    <style name="roundedImageViewRounded">
        <item name="cornerSize">50%</item>
    </style>

    <style name="cornerRadiusRegular">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Theme.UberApp_Tim9.AppBarOverlay" parent="Theme.Material3.Dark.NoActionBar" />

    <style name="Theme.UberApp_Tim9.PopupOverlay" parent="Theme.Material3.Dark.NoActionBar" />

    <style name="ThemeOverlay.AppCompat.navTheme">

        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/sky_blue</item>

    </style>

    <style name="Theme.UberApp_Tim9.Basic">
        <item name="android:textColor">@color/black</item>
        <item name="android:colorControlNormal">@color/dark_grey</item>
        <item name="android:textColorSecondary">@color/cardview_dark_background</item>
    </style>
</resources>